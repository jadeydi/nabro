<div class='home index'>
<div>
  <% if @state %>
    <% user = @state.user %>
    <%= image_tag user.avatar, size: '80x80', class: 'img-circle center-block' %>
    <div class='text-center'>
      最后点击: <%= user.last_clicked_at %>
    </div>
  <% end %>
</div>
<div class='text-center'>
  <% if current_user %>
    <div class="js-already-clicked hidden">
      <%= I18n.t("site.prompt.already_clicked") %>
    </div>
    <%= link_to I18n.t('home.state'), states_path, method: 'post', class: 'js-state-btn btn btn-success', data: {last_clicked_at: last_clicked_at} %>
  <% else %>
    <%= link_to '替换', new_user_session_path, class: 'btn btn-succucss' %>
  <% end %>
</div>
</div>
