<div class='user ailse in'>
<h2>注册</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, "邮箱" %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :nickname, "昵称" %>
    <%= f.text_field :nickname, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, "密码" %>
    <% if @minimum_password_length %>
      <em>(最少 <%= @minimum_password_length %> 位)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "确认密码" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group container">
    <div class="row">
      <%= f.submit "注册", class: 'btn btn-success col-xs-4' %>
      <%= link_to "登录", new_user_session_path, class: 'next' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
