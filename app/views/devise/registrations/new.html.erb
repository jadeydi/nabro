<div class='cls-content'>
<div class='user ailse in'>
  <p>新帐号注册</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">
          <%= icon('envelope-o') %>
        </span>
        <%= f.email_field :email, placeholder: '邮箱', autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">
          <%= icon('user') %>
        </span>
        <%= f.text_field :nickname, placeholder: '昵称', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon">
          <%= icon('key') %>
        </span>
        <%= f.password_field :password, placeholder: '密码(最少6位)', autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <%= f.submit "注册", class: 'btn btn-success col-xs-12' %>
      </div>
    </div>
  <% end %>
</div>
<div class="pad-ver">
  已经有帐号？<%= link_to "登录", new_user_session_path, class: 'btn-link mar-rgt' %>
</div>
</div>
