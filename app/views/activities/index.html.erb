<div class="site tasks">
<div class='heading'>
  <i class="fa fa-rocket"></i>
</div>
<ul class='list'>
  <% @activities.each do |a| %>
    <li>
      <%= image_tag a.user.avatar, size: '36x36', class: 'img-circle avatar' %>
      <div class='content'>
        <span class='created at'>
          <%= a.created_at %>
        </span>
        <%= a.user.nickname %>
        <div>
          <%= attempt_type(a) %>
          <%= link_to a.target.title, a.target %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
</div>
