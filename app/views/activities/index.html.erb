<div class="site tasks">
<div class='heading'>
  <i class="fa fa-rocket"></i>
</div>
<ul class='list'>
  <% @activities.each do |a| %>
    <li>
      <%= image_tag a.user.avatar, size: '36x36', class: 'img-circle avatar' %>
      <div class='content'>
        <time class='created at timeago' datetime="<%= a.created_at.to_s(:iso) %>">
          <%= a.created_at.to_s(:iso) %>
        </time>
        <%= a.user.nickname %>
        <div>
          <%= attempt_type(a) %>
          <%= link_to a.target.title, a.target %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
</div>
