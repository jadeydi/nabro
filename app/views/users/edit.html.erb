<div class='user ailse'>
<h2>编辑</h2>

<%= form_for(@user, url: users_path, html: { method: :put }) do |f| %>

  <div class="form-group">
    <%= f.label :nickname, '昵称' %>
    <%= f.text_field :nickname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :biography, '个人介绍' %>
    <%= f.text_area :biography, class: 'form-control' %>
  </div>

  <div class="form-group container">
    <div class="row">
    <%= f.submit "更新", class: 'btn btn-success col-xs-12' %>
    </div>
  </div>
<% end %>
</div>
