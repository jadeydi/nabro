<div class='user edit ailse border'>
<div class='avatar'>
  <%=link_to image_tag(@user.avatar, size: '100x100'), update_avatar_users_path %>
</div>

<%= form_for(@user, url: users_path, html: { method: :put }) do |f| %>

  <div class="form-group">
    <%= f.label :nickname, '昵称' %>
    <%= f.text_field :nickname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :biography, '个人介绍' %>
    <%= f.text_area :biography, class: 'form-control' %>
  </div>

  <div class="form-group">
    最后点击: <%= current_user.last_clicked_at %>
  </div>

  <div class="container">
    <div class="row">
      <%= f.submit "更新", class: 'btn btn-success col-xs-12' %>
    </div>
  </div>
<% end %>

<div class="container navi">
  <div class="row">
    <div class="col-xs-6 text-center">
      <%= link_to root_path do %>
        <%= icon('home') %>
      <% end %>
    </div>
    <div class="col-xs-6 text-center">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <%= icon('sign-out') %>
      <% end %>
    </div>
  </div>
</div>
</div>
