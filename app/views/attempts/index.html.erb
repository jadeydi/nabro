<p id="notice"><%= notice %></p>

<h4 class='title'>
  要做
  <%= link_to '新建', new_attempt_path %>
</h4>

<div class='row user attempts'>
  <% @attempts.each do |a|  %>
    <div class='col-xl-3'>
      <div class='item'>
        <div class='content'>
          <%= a.content %>
        </div>
        <% if a.active? %>
          <div class='row operator'>
            <div class='col-xs-6'>
              <%= link_to "编辑", edit_attempt_path(a) %>
            </div>
            <div class='col-xs-6'>
              <%= link_to "完成", attempt_path(a), method: 'delete', data: {confirm: "不可恢复哦!"} %>
            </div>
          </div>
        <% else %>
          <div class='operator'>
            <div>
              已完成
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @attempts %>
