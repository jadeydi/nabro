<div class="site tasks">
<div class='heading'>
  <i class="fa fa-rocket"></i>
</div>
<ul class='list'>
  <% @attempts.each do |ua| %>
    <li>
      <%= image_tag ua.user.avatar, size: '36x36', class: 'img-circle avatar' %>
      <div class='content'>
        <span class='created at'>
          <%= ua.created_at %>
        </span>
        <%= ua.user.nickname %>
        <div>
          <%= attempt_type(ua) %> 一次任务
          <%= link_to ua.task.title, ua.task %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
</div>
