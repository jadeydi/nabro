<div class='attempt index'>
<div class='user'>
  <%= image_tag current_user.avatar, size: '80x80', class: 'img-circle', alt: current_user.nickname %>
  <%= link_to new_attempt_path, class: 'new' do %>
    <i class="fa fa-pencil-square-o"></i>
  <% end %>
</div>
<ul class='list'>
  <% @attempts.each do |a|  %>
    <li>
      <div class='title'>
        <%= a.title %>
      </div>
      <div class='opt'>
        <%= a.created_at %>
        <% if a.active? %>
          <span>
            <%= link_to "编辑", edit_attempt_path(a) %>
            <%= link_to "完成", attempt_path(a), method: 'delete', data: {confirm: "不可恢复哦!"} %>
          </span>
        <% else %>
          <span class="label label-info">完成</span>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
</div>

<%= paginate @attempts %>
